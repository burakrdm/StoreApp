@model StoreApp.Entity.Product
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h3></h3>


@using (Html.BeginForm())
{

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Category:</label>
        <div class="col-sm-10">
            @Html.DropDownList("CategoryId", new SelectList(ViewBag.Categories, "ID", "Name"), new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label" style="color:black !important;">Ürün Adı:</label>
        <div class="col-sm-10">
            @Html.TextBox("Name", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Ürün Açıklaması:</label>
        <div class="col-sm-10">
            @Html.TextArea("Description", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Ürün Fİyatı:</label>
        <div class="col-sm-10">
            @Html.TextBox("Price", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Stok:</label>
        <div class="col-sm-10">
            @Html.TextBox("Stock", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Ürün Resim:</label>
        <div class="col-sm-10">
            @Html.TextBox("Image", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Onaylı Mı:</label>
        <div class="col-sm-10">
            @Html.CheckBox("isApproved")
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Anasayfada Mı:</label>
        <div class="col-sm-10">
            @Html.CheckBox("isHome")
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">isFeatured:</label>
        <div class="col-sm-10">
            @Html.CheckBox("isFeatured")
        </div>
    </div>


    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Guncelleme Tarihi:</label>
        <div class="col-sm-10">
            @Html.TextBox("UpdateDate", null, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Güncelleyen Kişi:</label>
        <div class="col-sm-10">
            @Html.TextBox("UpdateBy", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Silindi Mi:</label>
        <div class="col-sm-10">
            @Html.TextBox("IsDeleted", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Ekleme Tarihi:</label>
        <div class="col-sm-10">
            @Html.TextBox("InsertDate", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Ekleyen Kişi:</label>
        <div class="col-sm-10">
            @Html.TextBox("InsertBy", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>Kaydet</button>
        </div>
    </div>
    

}
