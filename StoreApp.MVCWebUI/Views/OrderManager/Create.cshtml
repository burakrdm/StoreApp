@model StoreApp.Entity.Order
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h3></h3>


@using (Html.BeginForm())
{

<div class="form-horizontal">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label" style="color:black !important;">Ürün Id:</label>
        <div class="col-sm-10">
            @Html.TextBox("ProductId", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label" style="color:black !important;">Sipariş Fiyatı:</label>
        <div class="col-sm-10">
            @Html.TextBox("Price", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label" style="color:black !important;">Adet:</label>
        <div class="col-sm-10">
            @Html.TextBox("Amount", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label" style="color:black !important;">Piece:</label>
        <div class="col-sm-10">
            @Html.TextBox("Piece", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label" style="color:black !important;">Sipariş Tarihi:</label>
        <div class="col-sm-10">
            @Html.TextBox("OrderDate", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label" style="color:black !important;">Kullanıcı ID:</label>
        <div class="col-sm-10">
            @Html.TextBox("UserID", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Guncelleme Tarihi:</label>
        <div class="col-sm-10">
            @Html.TextBox("UpdateDate", null, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Güncelleyen Kişi:</label>
        <div class="col-sm-10">
            @Html.TextBox("UpdateBy", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Silindi Mi:</label>
        <div class="col-sm-10">
            @Html.TextBox("IsDeleted", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Ekleme Tarihi:</label>
        <div class="col-sm-10">
            @Html.TextBox("InsertDate", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label" style="color:black !important;">Ekleyen Kişi:</label>
        <div class="col-sm-10">
            @Html.TextBox("InsertBy", null, new { @class = "form-control" })
        </div>
    </div>




    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>Kaydet</button>
        </div>
    </div>
</div>

}
